{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ], // Thêm phần này để đảm bảo các định nghĩa Node.js được áp dụng
    "skipLibCheck": true
  },
  "include": [
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ] // Loại trừ thư mục node_modules để tránh xung đột
}